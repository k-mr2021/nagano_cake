<div>
  <h2>注文履歴一覧</h2>
  <div>
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <!--登録した配送先を表示-->
          <% @orders.each do |order| %>
            <tr>
              <!--注文日-->
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <!--住所-->
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <!---注文詳細から取得-->
                <% order.order_details.each do |order_detail| %>
                　<!--商品名-->
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <!--請求金額-->
              <td><%= order.billing_amount %>円</td>
              <!--注文履歴詳細へリダイレクト-->
              <td><%= link_to "表示する", order_path(order.id) %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>




