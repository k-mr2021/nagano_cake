<h2>ショッピングカート</h2>
<div><%= link_to "カートを空にする", destroy_all_path(@cart_items), method: :delete, "date-confirm" => "商品をすべて削除しますか？" %></div>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <!--商品画像-->
        <%= image_tag cart_item.item.image if cart_item.item.image.present? %>
        <!--商品名-->
        <%= cart_item.item.name %>
      </td>
      <!--単価(税込み価格)-->
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <!--数量選択フォーム-->
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <!--小計-->
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "date-confirm" => "商品を削除しますか？" %></td>
    </tr>
    <!--アイテムごとに合計金額に加算-->
    <% @total +=cart_item.subtotal %>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", items_path %>
合計金額 <%= @total %>
