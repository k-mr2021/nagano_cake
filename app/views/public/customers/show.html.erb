<div class= "container-fluid">
  <div class= "row justify-content-start">
    <div class= "offset-2"></div>
    <div class= "col-2 ml-5">
      <h3 class= "text-center mt-4 mb-2 bg-secondary">マイページ</h3>
    </div>
  </div>
  <div class= "row">
    <div class= "offset-1"></div>
    <div class= "col-11 mb-3">
      <b>登録情報</b>
      <%= link_to "編集する" , edit_customer_path, class:"btn btn-success px-1 py-1 ml-3" %>
    </div>
  </div>
  <div class= "row">
    <div class= "offset-1"></div>
    <div class= "col-7">
      <table class="table table-hover table-bordered">
        <tbody>
          <tr>
            <td bgcolor= "#f5f5f5">氏名</td>
            <td><%= @full_name %></td>
          </tr>
          <tr>
            <td bgcolor= "#f5f5f5">カナ</td>
            <td><%= @full_name_kana %></td>
          </tr>
          <tr>
            <td bgcolor= "#f5f5f5">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td bgcolor= "#f5f5f5">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td bgcolor= "#f5f5f5">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td bgcolor= "#f5f5f5">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class ="row">
    <div class= "offset-1"></div>
    <div class= "col-5 mt-3">
      <b>配送先</b>
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-4" %>
    </div>
  </div>
  <div class= "row">
    <div class= "offset-1"></div>
    <div class= "col-5 mt-3">
     <b>注文履歴</b>
     <%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-2" %>
   </div>
  </div>
</div>









