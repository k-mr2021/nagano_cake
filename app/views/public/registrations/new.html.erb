<div>
  <div>
    <div>
      <h2>新規会員登録</h2>
    </div>
  </div>  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    
      <div>
        <div><%= f.label "お名前" %></div>
        <div><%= f.label "(性)" %></div>
        <div><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %></div>
        <div><%= f.label "(名)" %></div>
        <div><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %></div>
      </div>
      <div>
        <div><%= f.label "フリガナ" %></div>
        <div><%= f.label "(セイ)" %></div>
        <div><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %></div>
        <div><%= f.label "(メイ)" %></div>
        <div><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %></div>
      </div>
      <div class="field">
        <div><%= f.label "メールアドレス" %></div>
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></div>
      </div>
      <div class="field">
        <div><%= f.label "郵便番号(ハイフンなし)" %></div>
        <div><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></div>
      </div>
      <div class="field">
        <div><%= f.label "住所" %></div>
        <div><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
      </div>
      <div class="field">
        <div><%= f.label "電話番号(ハイフンなし)" %></div>
        <div><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %></div>
      </div>
      <div class="field">
        <div>
          <% if @minimum_password_length %>
            <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
          <% end %>
        </div>
        <div><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>
    
      <div class="field">
        <div><%= f.label :"パスワード(確認用)" %></div>
        <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
    
      <div class="actions">
        <div>
          <%= f.submit "新規登録" %>
        </div>
      </div>
    <% end %>
    
    <%= render "public/shared/links" %>
</div>




