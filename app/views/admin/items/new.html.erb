<div class= "container">
  <div class="row">
    <div class= "cor-4">
      <h3 class= "mt-4 mb-5 bg-secondary">商品新規登録</h3>
    </div>
  </div>
  <div class= "row">
    <div class= "col-sm-10 px-sm-0 mx-auto mb-5">
      <!--商品追加-->
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <table class= "table table-borderless">
        <tr>
          <div class= "form-group">
            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </div>
        </tr>
        <tr>
          <div class= "form-group">
            <th><%= f.label :商品名 %></th>
            <td><%= f.text_field :name, size: "37x5", placeholder: "商品名" %></td>
          </div>
        </tr>
        <tr>
          <div class= "form-group">
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :introduction, size: "40x5", placeholder: "ここに説明文を記述します" %></td>
          </div>
        </tr>
        <tr>
          <div class= "form-group">
            <th><%= f.label :ジャンル %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
          </div>
        </tr>
        <tr>
          <div class= "form-group">
            <th><%= f.label :税抜き価格 %></th>
            <td><%= f.text_field :price, size: "37x5", placeholder: "1000" %>円</td>
          </div>
        </tr>
        <tr>
          <div class= "form-action">
            <th></th>
            <td><%= f.submit "新規登録", class: "btn btn-success mt-4 px-3 ml-5" %></td>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div> 










































