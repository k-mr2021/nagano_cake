<div class= "container">
  <div class= "row">
    <div class= "cor-4">
      <h3 class= "mt-4 mb-2 bg-secondary">商品一覧</h3>
    </div>
    <div class="col-sm-10 px-sm-0 text-right mt-4 mb-2">
      <%= link_to new_admin_item_path,class:"btn btn btn-outline-secondary" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div>
    <div>
      <table class= "table">
        <thead class= "thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <!--追加した商品の一覧表示-->
          <% @items.each do |item| %>
          <tr>
            <!--商品ID-->
            <td><%= item.id %></td>
            <!--商品詳細へのリンク-->
            <td><%= link_to admin_item_path(item.id) do %>
            <!--商品ID,商品名-->
              <%= item.name %>
            <% end %>
            </td>
            <!--税抜き価格-->
            <td><%= item.price.to_s(:delimited) %></td>
            <!--アソシエーション設定後genresテーブルからデータ取得-->
            <td><%= item.genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>

















