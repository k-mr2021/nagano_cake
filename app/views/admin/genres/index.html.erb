<div>
  <div>
    <div>
      <h2>ジャンル一覧</h2>
    </div>
  </div>
  <div>
    <div>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名を入力してください" %>
        <%=f.submit "新規登録" %>
      <% end %>
    </div>
  </div>
  <div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>
      
      
      
      
      
      
      
      
      
      