<div class= "container">
  <div class= "row">
    <div class= "cor-4">
      <h3 class= "mt-4 mb-5 bg-secondary">ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class ="row mb-5">
    <div class="col-xs-12">
      <!--ジャンル追加-->
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名を入力してください", class: "ml-4" %>
        <%=f.submit "新規登録", class: "btn btn-success ml-4 py-1" %>
      <% end %>
    </div>
  </div>
  <div class= "row">
    <div class= "col-lg-5">
      <table class="table">
        <thead class= "thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <!--追加したジャンルを表示-->
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success ml-4 py-1" %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      