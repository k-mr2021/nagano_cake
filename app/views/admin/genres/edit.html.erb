<div class= "container">
  <div class= "row">
    <div class= "cor-4">
      <h3 class= "mt-4 mb-5 bg-secondary">ジャンル編集</h3>
    </div>
  </div>
  <div class ="row mb-5">
    <div class="col-xs-12">
      <%= form_with model: @genre_found, url: admin_genre_path(@genre_found), method: :patch do |f| %>
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name, class: "ml-4" %>
        <%= f.submit "変更を保存", class: "btn btn-success ml-4 py-1" %>
    <% end %>
    </div>
  </div>
</div>







