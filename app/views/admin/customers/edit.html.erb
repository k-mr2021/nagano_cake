<div>
  <h2><%= @full_name %>さんの会員情編集</h2>
  <div>
    <!--更新メソッド-->
    <%= form_with model: @customer_found, url: admin_customer_path, method: :patch do |f| %>
    <div>
      <div>
        会員ID
        <%= @customer_found.id %>
      </div>
      <div>
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div>
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address%> 
      </div>
      <div>
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :"会員ステータス" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :"有効" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :"退会" %>
      </div>
      <div>
        <%= f.submit "変更を保存" %>
      </div>
    </div>
  <% end %>
  </div>
</div>










